{
    "name": "slne-development/filament-authorization",
    "description": "Filament Authorization using policies and spatie-permissions",
    "keywords": [
        "SLNE-Development",
        "laravel",
        "filament-authorization"
    ],
    "homepage": "https://github.com/slne-development/filament-authorization",
    "support": {
        "issues": "https://github.com/slne-development/filament-authorization/issues",
        "source": "https://github.com/slne-development/filament-authorization"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Homberg",
            "email": "homberg@slne.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "filament/filament": "~5.0",
        "spatie/laravel-package-tools": "^1.15.0",
        "spatie/laravel-permission": "^6.24"
    },
    "require-dev": {
        "nunomaduro/collision": "^8.6"
    },
    "autoload": {
        "psr-4": {
            "SLNE\\FilamentAuthorization\\": "src/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "SLNE\\FilamentAuthorization\\FilamentAuthorizationServiceProvider"
            ],
            "aliases": {
                "FilamentAuthorization": "SLNE\\FilamentAuthorization\\Facades\\FilamentAuthorization"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
